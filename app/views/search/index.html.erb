<% content_for :javascript do %>
    <!-- include Google Feed API -->	 
	 <!-- <script type="text/javascript" src="http://www.google.com/jsapi?key=[your API key]"></script>  -->	 
	 <script type="text/javascript" src="http://www.google.com/jsapi"></script>	 

	 <!-- include this plugin -->	 
	 <script type="text/javascript" src="/javascripts/jquery.gfeed.js"></script>	 

	 <script type="text/javascript">	 
	     // when the DOM is ready, convert the feed anchors into feed content	 
	     jQuery(document).ready(function() {	 
	         jQuery('a.feed').gFeed( { target: '#feed', tabs: true } );	 
	     }); 
	 </script>
<% end %>

<div id="sidebar">
	<div class="sidebar-box rounded-small">
		<h3 id="feedHeader" class="clear">Phenoscape News</h3>
		<div id="feed">
		    <a class="feed" href="http://blog.phenoscape.org/feed/">Phenoscape News</a> 
		</div>
	</div>
</div>
<div id="main">
   <p style="margin: 1em 2.0em 0.5em;">
       You can use the tools below to explore the Knowledgebase in different ways. 
       Click the help 
       <img style="vertical-align: top;" src="/images/help.png" alt="help">
       icons below to learn more about each tool.
   </p>
   <table id="data-tools" cellspacing="8" summary="">
       <tr>
           
            <td id="search-forms" class="navigation-group Xrounded-small">
				<div id="term_search">
					<h3 class="field_label">Find a specific term
                        <a href="/hints/WebHints#FindSpecificTerm" class="help-link"><img src="/images/help.png" alt="help"></a></h3>
					<form id="termForm" action="/search/autocomplete">
						<div id="termFormContent">
							<div id="termChoiceGroup">
								<%= render :partial => '/search/term_autocomplete' %>
								<input id="termSubmit" type="submit" value="Search">
								<div id="termComplete"></div>
							</div>
							<p class="search-instructions">Type at least 3 characters to select from matching ontology terms.  If there are many matches, the autocomplete menu may take a few seconds to respond. Search entity terms (e.g. basihyal bone), phenotypic qualities (e.g. shape, size), taxonomic names (e.g. Ictaluridae), gene names or symbols (e.g. cadherin 6, cdh6), or publications.</p>
						</div>
					</form>
				</div>
            </td>
			<td id="data-browse" class="navigation-group">
				<h3>Browse data (faceted view)</h3>
				<ul>
					<li><%= link_to 'Phenotypes', :controller => :phenotypes, :action => :facets %>
                        <a href="/hints/WebHints#BrowseAllPhenotypes" class="help-link"><img src="/images/help.png" alt="help"></a></li>
				</ul>
				<h3 style="margin-top: 1em;">Browse ontologies (tree view)</h3>
				<ul>
					<li><%= link_to 'Taxa', :controller => :term, :action => :taxon, :id => 'TTO:201' %>
                        <a href="/hints/WebHints#BrowseTaxa" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><%= link_to 'Anatomical entities', :controller => :term, :id => 'CARO:0000003' %>
                        <a href="/hints/WebHints#BrowseAnatomicalEntities" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><%= link_to 'Phenotypic qualities', :controller => :term, :id => 'PATO:0000001' %>
                        <a href="/hints/WebHints#BrowsePhenotypicQualities" class="help-link"><img src="/images/help.png" alt="help"></a></li>
<!--
					<li><a href="#TODO">Genes</a>
                        <a href="/hints/WebHints#BrowseGenes" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><a href="#TODO">Comparative publications</a>
                        <a href="/hints/WebHints#BrowseComparitivePublications" class="help-link"><img src="/images/help.png" alt="help"></a></li>
-->
				</ul>
			</td>
       </tr>
       <tr>
			<td id="data-query" class="navigation-group">
				<h3>Query data</h3>
				<ul>
					<li><%= link_to 'Phenotypes', :controller => :phenotypes %>
                        <a href="/hints/WebHints#QueryPhenotpyes" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><%= link_to 'Phenotype annotations to taxa', :controller => :taxon_annotations %>
                        <a href="/hints/WebHints#QueryPhenotpyeAnnotationsToTaxa" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><%= link_to 'Phenotype annotations to genes', :controller => :gene_annotations %>
                        <a href="/hints/WebHints#QueryPhenotpyeAnnotationsToGenes" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><%= link_to 'Taxa', :controller => :taxa %>
                        <a href="/hints/WebHints#QueryTaxa" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><%= link_to 'Genes', :controller => :genes %>
                        <a href="/hints/WebHints#QueryGenes" class="help-link"><img src="/images/help.png" alt="help"></a></li>
					<li><%= link_to 'Comparative publications', :controller => :publications %>
                        <a href="/hints/WebHints#QueryCompatarivePublications" class="help-link"><img src="/images/help.png" alt="help"></a></li>
				</ul>
			</td>
		    <td id="data-viz" class="navigation-group Xrounded-small">
               <h3>Visualize data</h3>
               <ul>
                   <li><a href="/phenotypes/profile_tree">Phenotypic profile tree</a>
                        <a href="/hints/WebHints#VisualizePhenotypicProfileTree" class="help-link"><img src="/images/help.png" alt="help"></a></li>
                   <li><a href="#">Phenotype variation tree</a>
                        <a href="/hints/WebHints#VisualizePhenotypicVariationTree" class="help-link"><img src="/images/help.png" alt="help"></a></li>
               </ul>
            </td>
       </tr>
   </table>   
</div>